@using ClassLibrary1
@model List<Bitly>
@{
    ViewData["Title"] = "MyUrl";
}


<div class="container">
    <div class="header">
        <h2>All Urls</h2>
    </div>
    <div class="row header">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tr style="text-align:center;vertical-align:middle;">
                    <th style="text-align:center;vertical-align:middle;">Views</th>
                    <th style="text-align:center;vertical-align:middle;">Url</th>
                    <th style="text-align:center;vertical-align:middle;">Hash</th>
                </tr>
                @foreach (Bitly b in Model)
                {
                <tr>
                    <td style="text-align:center;vertical-align:middle;">
                        @b.Views
                    </td>
                    <td style="text-align:center;vertical-align:middle;">
                        <a href="@b.Url">@b.Url</a>
                    </td>
                    <td style="text-align:center;vertical-align:middle;">
                        <a href="/@b.Hash">@b.Hash</a>
                    </td>
                </tr>
                }
            </table>
        </div>
    </div>
</div>
